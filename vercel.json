{
  "version": 2,
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/static-build" },
    { "src": "backend/package.json", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "^/api/(.*)", "dest": "backend/app.js" }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/frontend/build/$1" }
  ]
}
